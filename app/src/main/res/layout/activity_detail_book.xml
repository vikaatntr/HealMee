<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context=".detail_book">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorBlue"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/book1"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul_book1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/book1"
                    android:fontFamily="@font/redhands"
                    android:text="I Want To Die But I Want To Eat Tteokpoki"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/author_book1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/judul_book1"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/book1"
                    android:fontFamily="@font/redhands"
                    android:text="by Baek Se Hee"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/rating_book1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/author_book1"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/book1" />

                <TextView
                    android:id="@+id/halaman_book1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignBottom="@id/rating_book1"
                    android:layout_toRightOf="@id/book1"
                    android:text="240 halaman | 23 reviews"
                    android:fontFamily="@font/redhands"
                    android:textColor="#FFFF"
                    android:textSize="12sp"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/detail_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/card1"
        android:padding="30dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/textDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Halooo dunia"
            android:textColor="@color/colorBlue"
            android:textSize="15dp"
            android:padding="15dp"
            android:fontFamily="@font/redhands"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>